<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXColorPicker?>
<?import com.jfoenix.controls.JFXComboBox?>
<?import de.jensd.fx.glyphs.materialdesignicons.MaterialDesignIconView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<VBox prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.gabrielavara.choiceplayer.controls.settings.SettingsController">
    <AnchorPane prefHeight="50.0" fx:id="titleContainer">
        <Label text="%settings" fx:id="titleLabel"/>
        <JFXButton fx:id="closeButton" contentDisplay="GRAPHIC_ONLY" graphicTextGap="0.0" mnemonicParsing="false">
            <graphic>
                <MaterialDesignIconView glyphName="CLOSE" size="32" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="icon"/>
            </graphic>
        </JFXButton>
    </AnchorPane>
    <VBox VBox.vgrow="ALWAYS">
        <StackPane alignment="TOP_LEFT">
            <VBox.margin>
                <Insets bottom="12.0" left="12.0" right="12.0" top="12.0"/>
            </VBox.margin>
            <Label text="%generalSettings"/>
        </StackPane>
        <HBox>
            <VBox.margin>
                <Insets left="12.0" right="12.0"/>
            </VBox.margin>
            <VBox HBox.hgrow="ALWAYS">
                <HBox.margin>
                    <Insets/>
                </HBox.margin>
                <Label text="%settingsFolderToLoad"/>
                <Label fx:id="folderToLoadLabel" text="C:\">
                    <VBox.margin>
                        <Insets bottom="6.0" top="6.0"/>
                    </VBox.margin>
                </Label>
            </VBox>
            <StackPane>
                <JFXButton contentDisplay="CENTER" mnemonicParsing="false" onMouseClicked="#folderToLoadBrowseButtonClicked" text="%settingsBrowse"/>
            </StackPane>
        </HBox>
        <HBox>
            <VBox.margin>
                <Insets left="12.0" right="12.0"/>
            </VBox.margin>
            <VBox HBox.hgrow="ALWAYS">
                <HBox.margin>
                    <Insets/>
                </HBox.margin>
                <Label text="%settingsFolderToMoveLikedMusic"/>
                <Label fx:id="folderToMoveLikedMusicLabel" text="C:\">
                    <VBox.margin>
                        <Insets bottom="6.0" top="6.0"/>
                    </VBox.margin>
                </Label>
            </VBox>
            <StackPane>
                <JFXButton contentDisplay="CENTER" mnemonicParsing="false" onMouseClicked="#folderToMoveLikedMusicBrowseButtonClicked" text="%settingsBrowse"/>
            </StackPane>
        </HBox>
        <StackPane alignment="TOP_LEFT">
            <VBox.margin>
                <Insets bottom="12.0" left="12.0" right="12.0" top="12.0"/>
            </VBox.margin>
            <Label text="%themeSettings"/>
        </StackPane>
        <HBox>
            <StackPane alignment="CENTER_LEFT" HBox.hgrow="ALWAYS">
                <Label text="%settingsStyle"/>
            </StackPane>
            <JFXComboBox fx:id="styleComboBox" prefWidth="150.0"/>
            <VBox.margin>
                <Insets bottom="12.0" left="12.0" right="12.0" top="12.0"/>
            </VBox.margin>
        </HBox>
        <HBox>
            <VBox.margin>
                <Insets bottom="12.0" left="12.0" right="12.0" top="12.0"/>
            </VBox.margin>
            <StackPane alignment="CENTER_LEFT" HBox.hgrow="ALWAYS">
                <Label text="%settingsAccentColor" StackPane.alignment="CENTER_LEFT"/>
            </StackPane>
            <JFXColorPicker fx:id="accentColorPicker" onAction="#accentColorPickerChanged"/>
        </HBox>
    </VBox>
</VBox>
