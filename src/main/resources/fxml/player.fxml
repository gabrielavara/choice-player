<?xml version="1.0" encoding="UTF-8"?>

<?import com.gabrielavara.choiceplayer.controls.animatedbutton.AnimatedButton?>
<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXSlider?>
<?import com.jfoenix.controls.JFXSpinner?>
<?import com.jfoenix.controls.JFXTreeTableView?>
<?import de.jensd.fx.glyphs.materialdesignicons.MaterialDesignIconView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<HBox fx:id="rootContainer" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
      prefHeight="800.0" prefWidth="1400.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.gabrielavara.choiceplayer.controllers.PlayerController">
    <VBox fx:id="currentlyPlayingBox">
        <StackPane fx:id="albumArtStackPane">
            <VBox.margin>
                <Insets bottom="24.0" left="24.0" right="24.0" top="64.0"/>
            </VBox.margin>
        </StackPane>
        <JFXSlider fx:id="timeSlider">
            <VBox.margin>
                <Insets bottom="12.0" left="72.0" right="72.0" top="24.0"/>
            </VBox.margin>
        </JFXSlider>
        <HBox prefHeight="20.0" prefWidth="200.0">
            <VBox.margin>
                <Insets left="72.0" right="72.0"/>
            </VBox.margin>
            <Label fx:id="elapsedLabel"/>
            <Pane prefHeight="200.0" HBox.hgrow="ALWAYS"/>
            <Label fx:id="remainingLabel"/>
        </HBox>
        <HBox alignment="CENTER" prefWidth="500.0">
            <JFXButton fx:id="dislikeButton" contentDisplay="GRAPHIC_ONLY" mnemonicParsing="false">
                <graphic>
                    <MaterialDesignIconView glyphName="THUMB_DOWN" size="36" strokeType="OUTSIDE" strokeWidth="0.0"
                                            styleClass="icon"/>
                </graphic>
                <HBox.margin>
                    <Insets bottom="12.0" left="12.0" right="12.0" top="12.0"/>
                </HBox.margin>
            </JFXButton>
            <JFXButton fx:id="previousTrackButton" contentDisplay="GRAPHIC_ONLY" mnemonicParsing="false"
                       styleClass="roundButton">
                <HBox.margin>
                    <Insets bottom="12.0" left="12.0" right="12.0" top="12.0"/>
                </HBox.margin>
                <graphic>
                    <MaterialDesignIconView glyphName="SKIP_PREVIOUS" size="32" strokeType="OUTSIDE" strokeWidth="0.0"
                                            styleClass="icon"/>
                </graphic>
            </JFXButton>
            <AnimatedButton fx:id="playPauseButton">
                <HBox.margin>
                    <Insets bottom="12.0" left="12.0" right="12.0" top="12.0"/>
                </HBox.margin>
            </AnimatedButton>
            <JFXButton fx:id="nextTrackButton" contentDisplay="GRAPHIC_ONLY" graphicTextGap="0.0" layoutX="35.0"
                       layoutY="10.0" mnemonicParsing="false">
                <HBox.margin>
                    <Insets bottom="12.0" left="12.0" right="12.0" top="12.0"/>
                </HBox.margin>
                <graphic>
                    <MaterialDesignIconView glyphName="SKIP_NEXT" size="32" strokeType="OUTSIDE" strokeWidth="0.0"
                                            styleClass="icon"/>
                </graphic>
            </JFXButton>
            <JFXButton fx:id="likeButton" contentDisplay="GRAPHIC_ONLY" mnemonicParsing="false" text="Button">
                <HBox.margin>
                    <Insets bottom="12.0" left="12.0" right="12.0" top="12.0"/>
                </HBox.margin>
                <graphic>
                    <MaterialDesignIconView glyphName="THUMB_UP" size="36" strokeType="OUTSIDE" strokeWidth="0.0"
                                            styleClass="icon"/>
                </graphic>
            </JFXButton>
        </HBox>
    </VBox>
    <StackPane fx:id="playlistStackPane" styleClass="playlistStackPane" HBox.hgrow="ALWAYS">
        <JFXTreeTableView fx:id="playlist" maxWidth="1.7976931348623157E308" prefWidth="700.0" HBox.hgrow="ALWAYS">
            <placeholder>
                <Label text=""/>
            </placeholder>
        </JFXTreeTableView>
        <JFXSpinner fx:id="spinner">
            <StackPane.margin>
                <Insets bottom="375.0" left="375.0" right="375.0" top="375.0"/>
            </StackPane.margin>
        </JFXSpinner>
    </StackPane>
</HBox>
